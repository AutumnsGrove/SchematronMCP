{
  "_comment": "Configuration template for SchematronMCP",
  "_instructions": [
    "1. Copy this file to 'config.json'",
    "2. Update the values with your actual paths and settings",
    "3. Do not commit config.json to git (it's in .gitignore)"
  ],

  "lm_studio": {
    "api_base": "http://localhost:1234/v1",
    "model_path": "/path/to/your/model",
    "model_name": "local-model"
  },

  "inference": {
    "default_temperature": 0.0,
    "default_max_tokens": 32000,
    "verbose": false
  },

  "html_cleaning": {
    "default_level": "standard",
    "auto_clean": true
  }
}
